

<div class="d-flex justify-content-center align-items-center">
  <p style="font-size: 20px;">Let's connect together</p>
</div>


<div class="row">
  <%# Left %>
  <div class="col-md-3 d-flex justify-content-center align-items-center">
    <%# Custom size (_footer.scss) %>
    <h3 class="custom-size-footer title-spicy-3">SunnYogi</h3>
  </div>
  <%# Middle %>
  <div class="col-md-6">
    <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
      <div class="text-center">
        <div class="d-flex justify-content-center">
          <i class="fab fa-facebook fa-3x mx-2"></i>
          <i class="fab fa-instagram fa-3x mx-2"></i>
          <i class="fab fa-youtube fa-3x mx-2"></i>
        </div>
      </div>
    </div>
  </div>
  <%# Right %>
  <div class="col-md-3 d-flex justify-content-center align-items-center">
    <%= image_tag('footer/sun.png', alt: 'Sun', class: 'footer-custom-image-size') %>
  </div>
</div>
